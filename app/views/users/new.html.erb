

<% provide(:title, "注册")%>

<div class="row">
  <div class="span6 offset2">
  	<h2>注册</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
     
      <div class="fieldclass">
      <%= f.label :name, class:"formlabel" %>
      <%= f.text_field :name, class: "forminput" %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :password, class:"formlabel"  %>
      <%= f.password_field :password, class: "forminput"  %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :password_confirmation, class:"formlabel"  %>
      <%= f.password_field :password_confirmation, class: "forminput"  %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :truename, class:"formlabel"  %>
      <%= f.text_field :truename, class: "forminput"  %>	
      </div>
      
      <div class="fieldclass">
      <%= f.label :workunits, class:"formlabel"  %>
      <%= f.text_field :workunits, class: "forminput"  %>	
      </div>
      
      <div class="fieldclass">
      <%= f.label :userpost, class:"formlabel"  %>
      <%= f.text_field :userpost, class: "forminput"  %>	
      </div>
      
      <div class="fieldclass">
      <%= f.label :phone, class:"formlabel"  %>
      <%= f.text_field :phone, class: "forminput"  %>	
      </div>
      
      <div class="fieldclass">
      <%= f.label :email, class:"formlabel"  %>
      <%= f.text_field :email, class: "forminput"  %>	
      </div>
      

      <%= f.submit "注册", class: "btn btn-primary", id: "clickbutton" %>
    <% end %>
  </div>
</div>
