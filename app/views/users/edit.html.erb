

<% provide(:title, "修改密码") %>


<div class="row">
  <div class="span6 offset2">
  	
  	<h2>修改密码</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
       <div class="nameclass" style="display: none">
	      <%= f.label :name %>
	      <%= f.text_field :name %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :旧密码, class:"formlabel" %>
      <%= f.password_field :oldpassword, class: "forminput"  %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :password, class:"formlabel" %>
      <%= f.password_field :password, class: "forminput"  %>
      </div>
      
      <div class="fieldclass">
      <%= f.label :password_confirmation, class:"formlabel" %>
      <%= f.password_field :password_confirmation, class: "forminput"  %>
       </div>

      <%= f.submit "保存修改", class: "btn btn-primary", id: "clickbutton" %>
    <% end %>

  </div>
</div>
